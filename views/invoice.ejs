<style>
.outercontainer {
    padding:40px;
    width:800px;
}

.tax-title {
    font-size:large;
    font-weight: 700;
    margin-right: 20px;
    white-space: nowrap;
}

.top-row-items{
    display: flex;
    font-weight:550;
    column-gap: 20px;
    font-size: 12px;
}

.top-row-subitems{
    display:flex;
    column-gap: 5px;
}

.top-row-right-element {
    font-weight: 700;
}

.info-row-items {
    margin-top: 20px;
    display:flex;
    column-gap: 20px;
}

.second-row-element {
    width:30%;
    font-size: 13px;
}

.main-row-items {
    margin:15px 2px 15px 2px;
    border:1.5px solid black;
}

.main-row1{
    height: 50px;
    display: flex;
    align-items: center;
    font-weight: 700;
    font-size:13px;
    border-bottom: 1px solid black;
}

.main-row1-item1 {
    width:20%;
    display:flex;
    justify-content: center;
    align-items: center;
}
.main-row1-item2 {
    width: 20%;
    display:flex;
    justify-content: center;
    align-items: center;
}
.main-row1-item3 {
    width: 10%;
    display:flex;
    justify-content: center;
    align-items: center;
}
.main-row1-item4 {
    width: 10%;
    display:flex;
    justify-content: center;
    align-items: center;
}

.main-row1-item5 {
    width: 10%;
    display:flex;
    justify-content: center;
    align-items: center;
}
.main-row1-item6 {
    width: 10%;
    display:flex;
    justify-content: center;
    align-items: center;
}
.main-row1-item7{
    width: 10%;
    display:flex;
    justify-content: center;
    align-items: center;
}
.main-row1-item8 {
    width: 10%;
    display:flex;
    justify-content: center;
    align-items: center;
}

.main-row2 {
    min-height: 100px;
    display: flex;
    align-items: center;
    font-weight:400;
    font-size: 12px;
    padding-left: 5px;
    padding-right: 2px;
}

.main-row3 {
    min-height: 50px;
    display: flex;
    align-items: center;
    font-weight: 400;
    font-size: 12px;
    padding-left: 5px;
    padding-right: 2px;
    border-bottom: 1px solid black;
}

.main-row4 {
    min-height: 50px;
    display: flex;
    align-items: center;
    justify-content:space-between;
    font-weight: 400;
    font-size: 12px;
    padding-left: 5px;
    padding-right: 5px;

}

.main-row4-quantity{
    font-weight: 600;
    font-size: 15px;
}

.top-row-left-element {
    white-space: nowrap;
}

p {margin:0}

