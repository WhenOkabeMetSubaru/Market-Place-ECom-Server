<body>
    <section class='outercontainer'>
        <div class='top-row-items'>
            <p class='tax-title'>Tax Invoice</p>
            <div>
                <span class='top-row-subitems'>
                    <p class="top-row-left-element">Order No:</p>
                    <p class='top-row-right-element'>DFSDFDSF254</p>
                </span>
                <span class='top-row-subitems'>
                    <p class="top-row-left-element">Order Date:</p>
                    <p><%= order.created.toString().substring(0,10) %></p>
                </span>
            </div>
            <div>
                <span class='top-row-subitems'>
                    <p class="top-row-left-element">Invoice No:</p>
                    <p>DFSDFDSF254</p>
                </span>
                <span class='top-row-subitems'>
                    <p class="top-row-left-element">Invoice Date:</p>
                    <p><%= order.created.toString().substring(0,10) %></p>
                </span>
            </div>
            <div>
                <span class='top-row-subitems'>
                    <p class="top-row-left-element">GST IN:</p>
                    <p>DFSDFDSF254</p>
                </span>
                <span class='top-row-subitems'>
                    <p class="top-row-left-element">PAN:</p>
                    <p>BD484JDFL</p>
                </span>
            </div>
        </div>
        <div class='info-row-items'>
            <div class='second-row-element'>
                <h3>Sold By</h3>
                <h5><%= shop.name %></h5>
                <p><%= shop.address %>
                </p>
            </div>
            <div class='second-row-element'>
                <h3>Shipping Address</h3>
                <h5><%= order.customer_name %></h5>
                <p>
                    <%= order.delivery_address.street %>
                        <br />
                        <%= order.delivery_address.city%>
                            <br />
                            <%= order.delivery_address.city%>
                                <%= order.delivery_address.zipcode%>
                </p>
            </div>
            <div class='second-row-element'>
                <h3>Billing Address</h3>
                <h5>
                    <%= order.customer_name %>
                </h5>
                <p>
                    <%= order.delivery_address.street %>
                    <br/>
                    <%= order.delivery_address.city%>
                    <br/>
                    <%= order.delivery_address.city%> <%= order.delivery_address.zipcode%>
                </p>
            </div>
        </div>
    
        <div class='main-row-items'>
            <div class='main-row1'>
                <div class='main-row1-item1'>
                    <p>Product</p>
                </div>
                <div class='main-row1-item2'>
                    <p>Description</p>
                </div>
                <div class='main-row1-item3'>
                    <p>Quantity</p>
                </div>
                <div class='main-row1-item4'>
                    <p>Gross Amount</p>
                </div>
                <div class='main-row1-item5'>
                    <p>Discount</p>
                </div>
                <div class='main-row1-item6'>
                    <p>Tax Value</p>
                </div>
                <div class='main-row1-item7'>
                    <p>IGST</p>
                </div>
                <div class='main-row1-item8'>
                    <p>Total</p>
                </div>
    
            </div>
            <div class='main-row2'>
                <div class='main-row1-item1'>
                    <p><%= order.products.product.name %>
                    </p>
                </div>
                <div class='main-row1-item2'>
                    <p>HSN: 8516 | IGST: 18%</p>
                </div>
                <div class='main-row1-item3'>
                    <p>1</p>
                </div>
                <div class='main-row1-item4'>
                    <p>0</p>
                </div>
                <div class='main-row1-item5'>
                    <p>0</p>
                </div>
                <div class='main-row1-item6'>
                    <p><%= order.products.product.sellingprice %></p>
                </div>
                <div class='main-row1-item7'>
                    <p>0</p>
                </div>
                <div class='main-row1-item8'>
                    <p><%= order.products.product.sellingprice %></p>
                </div>
    
            </div>
            <div class='main-row3'>
                <div class='main-row1-item1'>
    
                </div>
                <div class='main-row1-item2'>
                    <p>Shipping and Handling Charges</p>
                </div>
                <div class='main-row1-item3'>
                    <p>1</p>
                </div>
                <div class='main-row1-item4'>
                    <p>0.00</p>
                </div>
                <div class='main-row1-item5'>
                    <p>0</p>
